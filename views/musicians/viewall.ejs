<div class="secondary-header">

  <p>
    <a href="javascript:history.back()">
      < <span class="back">Back</span>
    </a>
  </p>

  <h3>Search Musicians</h3>

</div>

<div class

<div class="content-container">

  <div class="top-container">

    <div class="container">

      <div class="row">
        <div class="input-field col s12 m5" id="genreinput">
          <select class="filter-opt" id="genrefilter">
            <option value="1" disabled selected>Choose your option</option>
            <% for (key in genres) { %>
              <option class="filter-opt" value="<%= genres[key] %>"><%= genres[key] %></option>
            <% } %>
          </select>
          <label>Filter by Genre</label>
        </div>

        <div class="input-field col s12 m5" id="instinput">
          <select class="filter-opt" id="instfilter">
              <option value="1" disabled selected>Choose your option</option>
              <% for (key in instruments) { %>
                <option class="filter-opt" value="<%= instruments[key] %>"><%= instruments[key] %></option>
              <% } %>
            </select>
          <label>Filter by Instruments</label>
        </div>

        <div class="col s12 m2">
          <button class="btn filter-btn">Clear</button>
        </div>
      </div>

      <div class="col s12 m7">
        <% for (i=0; i < musicians.length; i++) { %>
          <div class="card horizontal hoverable musician">
            <div class="profile-img-container" style="background-image: url(<%= musicians[i].pic_path %>)"></div>
            <div class="card-stacked">
              <div class="card-content">
                <h2><%= musicians[i].username %></h3>
                <p>
                <%= musicians[i].city %>
                </p>
                <span class="instruments-list-text">
                <% for (j=0; j < musicians[i].instruments.length; j++) { %>
                  <%= musicians[i].instruments[j] %> |
                <% } %>
              </span>
              <div class="instruments-list">
                <% for (j=0; j < musicians[i].instruments.length; j++) { %>
                  <div class="instrument-image-container-tiny">
                    <img src="/images/png/<%= musicians[i].instruments[j].replace(/\s/g, '').toLowerCase() %>.png">
                  </div>
                <% } %>
              </div>
              <p class="genre-list">
              <% if (musicians[i].genres) { %>
                <% for (x=0; x < musicians[i].genres.length; x++) { %>
                  <%= musicians[i].genres[x] %>
                  <% if (x !== (musicians[i].genres.length - 1)) { %>
                  /
                  <% } %>
                <% } %>
              <% } %>
              </p>
            <div class="card-action">
              <a href="/musicians/<%= musicians[i]._id %>">View Profile</a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>

  </div>

  </div>

</div>
